@model AspNetCoreMVC.Models.Departamento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apagar Departamento</h1>

<h3>Você tem certeza que quer apagar?</h3>
<div>
    <hr />
    <div class="card-body">
        <div class="form-group">
            <div> @Html.DisplayNameFor(model => model.DepartamentoId)</div>
            <div class="input-group flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="addon-wrapping"><i class="fa fa-key fa-sm"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="@Model.DepartamentoId" aria-label="DepartamentoId" aria-describedby="addon-wrapping" disabled="disabled">
            </div>
            <div> @Html.DisplayNameFor(model => model.Nome)</div>
            <div class="input-group flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="addon-wrapping"><i class="fas fa-graduation-cap"></i></span>
                </div>
                <input type="text" class="form-control" placeholder="@Model.Nome" aria-label="Nome" aria-describedby="addon-wrapping" disabled="disabled">
            </div>
        </div>
        <input type="submit" value="Apagar" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#ConfirmacaoModal" />
        <a asp-action="Index" class="btn btn-success btn-sm">Voltar para Departamentos</a>
    </div>
</div>

<div class="modal" id="ConfirmacaoModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Remoção de Departamento</h5>
                <button type="button" class="close" data-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Confirma a exclusão de @Model.Nome ?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="DepartamentoId" />
                    <input type="submit" value="Apagar" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#ConfirmacaoModal" />
                    <a asp-action="Index" class="btn btn-success btn-sm">Voltar para Departamentos</a>
                </form>
            </div>
        </div>
    </div>
</div>