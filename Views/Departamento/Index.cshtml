@model IEnumerable<AspNetCoreMVC.Models.Departamento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}


<h1>Departamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-square"> Criar</i></a>
</p>
<table class="table" id="DepartamentoTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartamentoId" class="btn btn-primary"><i class="fas fa-edit"> Editar</i></a> |
                    <a asp-action="Details" asp-route-id="@item.DepartamentoId" class="btn btn-warning"><i class="fas fa-align-justify"> Detalhes</i></a> |
                    <a asp-action= "Delete" asp-route-id="@item.DepartamentoId" class="btn btn-danger"><i class="fas fa-trash"> Apagar</i></a>
                </td>
            </tr>
         }
    </tbody>
</table>
