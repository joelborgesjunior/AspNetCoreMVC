@model IEnumerable<AspNetCoreMVC.Models.Departamento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<h1>Departamentos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-square"> Criar</i></a>
</p>
<div sytle= "overflow-y:auto; Height: 400px;">
    <table class="table table-hover" id="DepartamentoTable">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td align="right">
                        <a asp-action="Edit" asp-route-id="@item.DepartamentoId" class="btn btn-primary btn-sm"><i class="fas fa-edit"> Editar</i></a>
                        <a asp-action="Details" asp-route-id="@item.DepartamentoId" class="btn btn-warning btn-sm"><i class="fas fa-align-justify"> Detalhes</i></a>
                        <a asp-action="Delete" asp-route-id="@item.DepartamentoId" class="btn btn-danger btn-sm"><i class="fas fa-trash"> Apagar</i></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>