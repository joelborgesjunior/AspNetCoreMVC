@model IEnumerable<AspNetCoreMVC.Models.Instituicao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Instituições</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fas fa-plus-square"> Criar</i></a>
</p>
<div sytle="overflow-y:auto; Height: 400px;">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereço)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereço)
                    </td>
                    <td align="right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"> Editar</i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-align-justify"> Detalhes</i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"> Apagar</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
